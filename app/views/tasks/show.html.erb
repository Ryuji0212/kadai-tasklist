<H1>id = <%= @task.id %>のタスク詳細ページ</H1>
<table class="table table-borded">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>タスク状況</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<%= link_to 'タスクを編集する', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'タスクを削除する', @task, method: :delete, data: {confirm: '本当に削除してよろしいですか'}, class: 'btn btn-danger' %>

